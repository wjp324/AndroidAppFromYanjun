<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

  <!--Button
      android:id="@+id/testplay"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="Test Play"
      android:lines="1"
      android:ellipsize="end"/>

  <Button
      android:id="@+id/testplay1"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="Test Play1"
      android:lines="1"
      android:ellipsize="end"/>

  <Button
      android:id="@+id/teststop"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="Test Stop"
      android:lines="1"
      android:ellipsize="end"/-->

  <Button
      android:id="@+id/startcap"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="Start Cap"
      android:lines="1"
      android:ellipsize="end"/>

  <Button
      android:id="@+id/time1"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="Time 1"
      android:lines="1"
      android:ellipsize="end"/>

  <Button
      android:id="@+id/time2"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="Time 2"
      android:lines="1"
      android:ellipsize="end"/>

  <Button
      android:id="@+id/save"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="Save"
      android:lines="1"
      android:ellipsize="end"/>


  <Button
      android:id="@+id/begin"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:text="Begin"
      android:lines="1"
      android:ellipsize="end"/>

  
  <TextView
      android:id="@+id/timesttext1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="Time St1"
      android:textSize="22sp" />

  <TextView
      android:id="@+id/timesttext2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="Time St2"
      android:textSize="22sp" />


  <TextView
      android:id="@+id/timestper1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="Time St1"
      android:textSize="22sp" />

  <TextView
      android:id="@+id/timestper2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:text="Time St2"
      android:textSize="22sp" />


</LinearLayout>
