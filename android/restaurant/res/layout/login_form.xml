<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:background="#bbf5f5f5"
    android:paddingRight="8dp" >

  <!--TextView
      android:id="@+id/l_section1"
      style="@style/formTitle"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1" 
      android:gravity="center_vertical"
      android:padding="8dp"
      android:text="@string/login_title" /-->
  
  <EditText
      android:id="@+id/username"
      style="@style/formEdit"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
      android:hint="@string/username_hint"
      android:inputType="textCapSentences|textAutoCorrect"/>

  <EditText
      android:id="@+id/password"
      style="@style/formEdit"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:hint="@string/password_hint"
      android:inputType="textPassword|textAutoCorrect"/>
  

  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
    <!--Button
	android:id="@+id/toRegister"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:singleLine="true"
	android:textStyle="bold"
	android:layout_marginRight ="15dp"
	android:layout_weight="1" 
	android:background="#aaa"
	style="@style/formButton"
	android:text="@string/register" /-->

    <Button
	android:id="@+id/loginSub"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:singleLine="true"
	android:textStyle="bold"
	android:paddingTop="10dp"
	android:paddingBottom="10dp"
	style="@style/formButton"
	android:layout_weight="1" 
	android:text="@string/login" 
	android:background="@color/g_g"
	/>
      
  </LinearLayout>

  <Button
      android:id="@+id/toRetrieve"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:singleLine="true"
      style="@style/formButton"
      android:text="@string/forgetPassword" 
      android:background="#00000000"
      android:textColor="#aaa"
      />

</LinearLayout>
